/* ================================================================================
  通用样式
================================================================================ */
/* ------------------------------------------------------------
   引入样式
------------------------------------------------------------ */
@import "./reset.scss"; // 清除默认样式
@import "./element-variables.scss"; // elem样式
/* ------------------------------------------------------------
   定义变量
------------------------------------------------------------ */
$mainColor: #3c4274; //主要颜色
$mainColor-02: #818886; //第二主要颜色
$mainColor-03: #333; //第三主要颜色
$borderCOlor: #dcdfe1; //边框颜色
/* ------------------------------------------------------------
   基础
------------------------------------------------------------ */
body {
  width: 100%;
  -moz-osx-font-smoothing: grayscale;
  -webkit-font-smoothing: antialiased;
  text-rendering: optimizeLegibility;
  font-family: Helvetica Neue, Helvetica, PingFang SC, Hiragino Sans GB,
    Microsoft YaHei, Arial, sans-serif;
}
/* ------------------------------------------------------------
   布局
------------------------------------------------------------ */
.grid-list {
  display: table;
  box-sizing: border-box;
  width: 100%;
}

.grid-list-item {
  display: table-cell !important;
  vertical-align: middle;
}

/* ------------------------------------------------------------
   颜色
------------------------------------------------------------ */
.primary-color {
  //主题第一颜色
  color: $mainColor;
}

.primary-color-02 {
  //主题第二颜色
  color: $mainColor-02;
}

.primary-color-03 {
  color: $mainColor-03;
}

.primary-color-white {
  color: #fff;
}

.primary-color-bg {
  background: $mainColor;
}

.primary-color-bg-white {
  background: #fff;
}
/* ------------------------------------------------------------
   字体
------------------------------------------------------------ */
.font-size-14 {
  font-size: 0.7rem;
}

.font-size-16 {
  font-size: 0.8rem;
}

.font-size-18 {
  font-size: 0.9rem;
}

.font-size-20 {
  font-size: 1rem;
}

.font-size-22 {
  font-size: 1.1rem;
}

.font-size-24 {
  font-size: 1.2rem;
}

.font-size-48 {
  font-size: 2.4rem;
}
/* ------------------------------------------------------------
   动画
------------------------------------------------------------ */
@-webkit-keyframes load {
  0% {
    width: 0;
  }

  100% {
    width: 70%;
  }
}
